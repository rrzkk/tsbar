{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "types": ["node", "jest"],
        "typeRoots": ["./types", "./node_modules/@types"],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "exclude": ["node_modules", "**/*.spec.ts"],
    "include": [
        "src/**/*",
        "test/*"
    ]
}
